@model IEnumerable<CategoriaViewModel>

@{
    ViewData["Title"] = "Lista de Categorias";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Categoria</a>
</p>

@if (Model.Count() == 0)
{
    <div>
        <p class="well">
            <strong>Nenhuma categoria cadastrada.</strong>
        </p>
    </div>
}
else
{


    <table class="table table-hover table-bordered">
        <thead>
            <tr class="bg-primary">
                <th width="20%">

                </th>
                <th width="50">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Editar</a> |
                        @*<a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.Id">Detalhes</a> |*@
                        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Excluir</a>
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.Nome)

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
